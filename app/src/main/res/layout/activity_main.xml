<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/_599646"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_description"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_backgrounds"
        android:fontFamily="@font/roboto"
        android:hint="@string/et_first_name"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLastName"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="24dp"
        android:textSize="24sp"
        android:hint="@string/et_last_name"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@drawable/input_backgrounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFirstName"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textColorHint="@color/black"
        android:padding="8dp"
        android:textColor="@color/black"
        android:hint="@string/et_email"
        android:fontFamily="@font/roboto"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/input_backgrounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLastName"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etAge"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/roboto"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="@string/et_age_hint"
        android:background="@drawable/input_backgrounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddUser"
        android:text="@string/add_user"
        app:layout_constraintHorizontal_weight="1"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRemoveUser"
        app:layout_constraintTop_toBottomOf="@id/etAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRemoveUser"
        android:text="@string/remove_user"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toEndOf="@id/btnAddUser"
        app:layout_constraintEnd_toStartOf="@id/btnUpdateUser"
        app:layout_constraintTop_toBottomOf="@id/etAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateUser"
        android:text="@string/update_user"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="18dp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toEndOf="@id/btnRemoveUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>