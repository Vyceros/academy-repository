<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RegisterFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTopLogo"
        android:layout_width="match_parent"
        android:gravity="center"
        app:srcCompat="@drawable/top_logo"
        android:layout_marginTop="64dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/margin_top_16_dp"
        android:layout_width="match_parent"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/et_email_hint"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:inputType=""
        android:hint="@string/et_email_hint_"
        android:textSize="18sp"
        android:drawableStart="@drawable/mail_icon"
        android:background="@drawable/edit_text_backgrounds"
        android:textColorHint="@color/gray"
        android:padding="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_top_16_dp"
        android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginTop="@dimen/margin_top_16_dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:hint="@string/et_password_hint_"
        android:padding="16dp"
        android:drawableEnd="@drawable/visibility_off"
        android:drawableStart="@drawable/lock_icon"
        android:background="@drawable/edit_text_backgrounds"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_remember_me_text" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="@string/btn_sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/sign_up_button_background"
        android:padding="16dp"
        android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
            android:layout_weight="1"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or_continue_with_suggestion"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp" />


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="@dimen/horizontal_margins_16_dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="0dp"
            android:padding="14dp"
            android:contentDescription="@string/btn_facebook_description"
            android:layout_weight="1"
            android:background="@drawable/back_to_back_buttons_background"
            android:src="@drawable/facebook_logo_primary"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_width="0dp"
            android:padding="14dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/btn_google_description"
            android:background="@drawable/back_to_back_buttons_background"
            android:src="@drawable/google_logo"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_width="0dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:contentDescription="@string/btn_apple_description"
            android:background="@drawable/back_to_back_buttons_background"
            android:src="@drawable/apple_logo_black"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="@string/already_have_an_account_warning"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_hint" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>